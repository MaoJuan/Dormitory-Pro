<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/loginbg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/loginTOP"
        android:layout_width="match_parent"
        android:layout_height="120.0dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        </RelativeLayout>

    <RelativeLayout
        android:id="@+id/usernameRL"
        android:layout_width="match_parent"
        android:layout_height="45.0dp"
        android:layout_below="@id/loginTOP">

    <TextView
        android:id="@+id/usernameTV"
        android:text="学号："
        android:textColor="#000000"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/usernameET"
        android:background="#ffffff"
        android:textSize="30sp"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/usernameTV" />
</RelativeLayout>

    <RelativeLayout
        android:id="@+id/passwordRL"
        android:layout_width="match_parent"
        android:layout_height="45.0dp"
        android:layout_below="@+id/usernameRL">
        <TextView
            android:id="@+id/passwordTV"
            android:text="密码："
            android:textColor="#000000"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/passwordET"
            android:layout_toRightOf="@+id/passwordTV"
            android:background="#ffffff"
            android:textSize="30sp"
            android:layout_width="260dp"
            android:layout_height="wrap_content" />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/loginRL"
        android:layout_width="match_parent"
        android:layout_height="45.0dp"
        android:layout_below="@+id/passwordRL">

    <Button
        android:id="@+id/loginB"
        android:layout_centerInParent="true"
        android:textSize="20sp"
        android:text="登录"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    </RelativeLayout>

</RelativeLayout>