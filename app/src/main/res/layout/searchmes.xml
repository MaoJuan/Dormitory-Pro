<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/topRL"
        android:layout_width="match_parent"
        android:layout_height="55.0dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:textColor="#000000"
            android:text="个人信息查询"
            android:textSize="30sp"
            android:layout_alignParentTop="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/stuidRL"
        android:layout_width="wrap_content"
        android:layout_height="45.0dp"
        android:layout_below="@+id/topRL">

    <TextView
        android:id="@+id/stuidTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="学号："
        android:textColor="#000000"
        android:textSize="30sp" />
    <EditText
        android:id="@+id/stuidET"
        android:layout_width="260dp"
        android:layout_height="35dp"
        android:background="#cccccc"
        android:textSize="30sp"
        android:layout_toRightOf="@+id/stuidTV"/>
     </RelativeLayout>

    <RelativeLayout
            android:id="@+id/nameRL"
            android:layout_width="wrap_content"
            android:layout_height="45.0dp"
            android:layout_below="@+id/stuidRL">
        <TextView
            android:id="@+id/nameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名："
            android:textColor="#000000"
            android:textSize="30sp"/>
        <EditText
            android:id="@+id/nameET"
            android:layout_width="260dp"
            android:layout_height="35dp"
            android:background="#cccccc"
            android:textSize="30sp"
            android:layout_toRightOf="@+id/nameTV"/>
        </RelativeLayout>

    <RelativeLayout
                android:id="@+id/genderRL"
                android:layout_width="wrap_content"
                android:layout_height="45.0dp"
                android:layout_below="@+id/nameRL">

        <TextView
            android:id="@+id/genderTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性别："
            android:textColor="#000000"
            android:textSize="30sp" />
        <EditText
            android:id="@+id/genderET"
            android:layout_width="260dp"
            android:layout_height="35dp"
            android:background="#cccccc"
            android:textSize="30sp"
            android:layout_toRightOf="@+id/genderTV"/>

            </RelativeLayout>

    <RelativeLayout
        android:id="@+id/vcodeRL"
        android:layout_width="wrap_content"
        android:layout_height="45.0dp"
        android:layout_below="@+id/genderRL">
        <TextView
            android:id="@+id/vcodeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="校验码："
            android:textColor="#000000"
            android:textSize="30sp" />
        <EditText
            android:id="@+id/vcodeET"
            android:layout_width="230dp"
            android:layout_height="35dp"
            android:background="#cccccc"
            android:textSize="30sp"
            android:layout_toRightOf="@+id/vcodeTV"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/locationRL"
        android:layout_width="wrap_content"
        android:layout_height="45.0dp"
        android:layout_below="@+id/vcodeRL">
        <TextView
            android:id="@+id/locationTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="校区："
            android:textColor="#000000"
            android:textSize="30sp" />
        <EditText
            android:id="@+id/locationET"
            android:layout_width="260dp"
            android:layout_height="35dp"
            android:background="#cccccc"
            android:textSize="30sp"
            android:layout_toRightOf="@+id/locationTV"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/gradeRL"
        android:layout_width="wrap_content"
        android:layout_height="45.0dp"
        android:layout_below="@+id/locationRL">
        <TextView
            android:id="@+id/gradeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="年级："
            android:textColor="#000000"
            android:textSize="30sp" />
        <EditText
            android:id="@+id/gradeET"
            android:layout_width="260dp"
            android:layout_height="35dp"
            android:background="#cccccc"
            android:textSize="30sp"
            android:layout_toRightOf="@+id/gradeTV"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gradeRL"
        android:layout_centerInParent="true">

    <Button
        android:id="@+id/searB"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="查询空床数"
        android:textSize="20sp"/>

    </RelativeLayout>






</RelativeLayout>
