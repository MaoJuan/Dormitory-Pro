<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/buttonsRL"
        android:layout_width="fill_parent"
        android:layout_height="45dp">

        <Button
            android:id="@+id/emptybedB"
            android:text="剩余宿舍数查询"
            android:layout_width="200dp"
            android:layout_height="45dp" />

        <Button
            android:id="@+id/dorcategoryB"
            android:text="宿舍类别查询"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_toRightOf="@id/emptybedB"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/personmesRL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/buttonsRL">

       <ListView
           android:id="@+id/personmesLV"
           android:layout_width="match_parent"
           android:layout_height="match_parent"></ListView>

    </RelativeLayout>

</RelativeLayout>
