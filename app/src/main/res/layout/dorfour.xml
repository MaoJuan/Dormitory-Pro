<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/loginbg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/dortwoRL"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_alignParentTop="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="四人寝室"
            android:textSize="30sp"
            android:textColor="#000000"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/username1RL"
        android:layout_width="match_parent"
        android:layout_height="45.0dp"
        android:layout_below="@id/dortwoRL">

        <TextView
            android:id="@+id/username1TV"
            android:text="学号1："
            android:textColor="#000000"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/username1ET"
            android:background="#cccccc"
            android:textSize="30sp"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/username1TV" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/password1RL"
        android:layout_width="match_parent"
        android:layout_height="45.0dp"
        android:layout_below="@+id/username1RL">
        <TextView
            android:id="@+id/password1TV"
            android:text="校验码1："
            android:textColor="#000000"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true" />
        <EditText
            android:id="@+id/password1ET"
            android:layout_toRightOf="@+id/password1TV"
            android:background="#cccccc"
            android:textSize="30sp"
            android:layout_width="230dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/username2RL"
        android:layout_width="match_parent"
        android:layout_height="45.0dp"
        android:layout_below="@id/password1RL">

        <TextView
            android:id="@+id/username2TV"
            android:text="学号2："
            android:textColor="#000000"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/username2ET"
            android:background="#cccccc"
            android:textSize="30sp"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/username2TV" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/password2RL"
        android:layout_width="match_parent"
        android:layout_height="45.0dp"
        android:layout_below="@+id/username2RL">
        <TextView
            android:id="@+id/password2TV"
            android:text="校验码2："
            android:textColor="#000000"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/password2ET"
            android:layout_toRightOf="@+id/password2TV"
            android:background="#cccccc"
            android:textSize="30sp"
            android:layout_width="230dp"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/username3RL"
        android:layout_width="match_parent"
        android:layout_height="45.0dp"
        android:layout_below="@id/password2RL">

        <TextView
            android:id="@+id/username3TV"
            android:text="学号3："
            android:textColor="#000000"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/username3ET"
            android:background="#cccccc"
            android:textSize="30sp"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/username3TV" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/password3RL"
        android:layout_width="match_parent"
        android:layout_height="45.0dp"
        android:layout_below="@+id/username3RL">
        <TextView
            android:id="@+id/password3TV"
            android:text="校验码3："
            android:textColor="#000000"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/password3ET"
            android:layout_toRightOf="@+id/password3TV"
            android:background="#cccccc"
            android:textSize="30sp"
            android:layout_width="230dp"
            android:layout_height="wrap_content" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/loginRL"
        android:layout_width="match_parent"
        android:layout_height="45.0dp"
        android:layout_below="@+id/password3RL">

        <Button
            android:id="@+id/loginB"
            android:layout_centerInParent="true"
            android:textSize="20sp"
            android:text="提交"
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </RelativeLayout>


</RelativeLayout>
