<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/loginbg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/topsebRL"
        android:layout_width="wrap_content"
        android:layout_height="55dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="剩余空床数"
            android:textSize="30sp"
            android:textColor="#000000"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fiveRL"
        android:layout_width="match_parent"
        android:layout_height="45.0dp"
        android:layout_below="@id/topsebRL">

        <TextView
            android:id="@+id/fiveTV"
            android:text="5号楼："
            android:textColor="#000000"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/usernameET"
            android:background="#cccccc"
            android:textSize="30sp"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/fiveTV" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/five2RL"
        android:layout_width="match_parent"
        android:layout_height="45.0dp"
        android:layout_below="@id/fiveRL">

        <TextView
            android:id="@+id/five2TV"
            android:text="13号楼："
            android:textColor="#000000"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/five2ET"
            android:background="#cccccc"
            android:textSize="30sp"
            android:layout_width="245dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/five2TV" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/five3RL"
        android:layout_width="match_parent"
        android:layout_height="45.0dp"
        android:layout_below="@id/five2RL">

        <TextView
            android:id="@+id/five3TV"
            android:text="14号楼："
            android:textColor="#000000"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/five3ET"
            android:background="#cccccc"
            android:textSize="30sp"
            android:layout_width="245dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/five3TV" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/five4RL"
        android:layout_width="match_parent"
        android:layout_height="45.0dp"
        android:layout_below="@id/five3RL">

        <TextView
            android:id="@+id/five4TV"
            android:text="8号楼："
            android:textColor="#000000"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/five4ET"
            android:background="#cccccc"
            android:textSize="30sp"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/five4TV" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/five5RL"
        android:layout_width="match_parent"
        android:layout_height="45.0dp"
        android:layout_below="@id/five4RL">

        <TextView
            android:id="@+id/five5TV"
            android:text="9号楼："
            android:textColor="#000000"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/five5ET"
            android:background="#cccccc"
            android:textSize="30sp"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/five5TV" />
    </RelativeLayout>

</RelativeLayout>
