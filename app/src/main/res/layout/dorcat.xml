<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/dorRL"
        android:layout_width="wrap_content"
        android:layout_height="55dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="剩余宿舍类别"
            android:textSize="30sp"
            android:textColor="#000000"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/oneRL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_below="@+id/dorRL">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单人寝室"

            android:textSize="30sp" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/twoRL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/oneRL"
        android:gravity="center_horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="双人寝室"
            android:textSize="30sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/threeRL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_below="@+id/twoRL">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="三人寝室"
            android:textSize="30sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fourRL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@+id/threeRL">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="四人寝室"
            android:textSize="30sp"
            android:layout_centerInParent="true" />
    </RelativeLayout>


</RelativeLayout>
